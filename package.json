{
  "name": "archimedes",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/arch",
    "packages/utils",
    "packages/components"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "npm run clean && npm run build:packages && npm run build:components",
    "build:components": "cd packages/components && npm run build",
    "build:packages": "parcel build packages/arch packages/utils",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci",
    "test:all": "npm run test --workspaces --if-present",
    "format": "prettier --write --ignore-path .gitignore .",
    "release": "multi-semantic-release --sequential-init",
    "release:check": "multi-semantic-release --dry-run --sequential-init"
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.15.0",
    "@babel/preset-typescript": "7.15.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@parcel/packager-ts": "^2.0.1",
    "@parcel/transformer-typescript-types": "^2.0.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.1",
    "@semantic-release/git": "10.0.1",
    "@types/jest": "27.0.1",
    "babel-jest": "27.1.0",
    "es-babel-jest": "1.0.0",
    "isomorphic-fetch": "3.0.0",
    "jest": "27.1.0",
    "multi-semantic-release": "^2.11.0",
    "parcel": "2.0.1",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1",
    "rimraf": "3.0.2",
    "simple-git-hooks": "2.6.1",
    "ts-jest": "27.0.5",
    "ts-mockito": "2.6.1",
    "typescript": "4.4.2"
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit",
    "pre-commit": "npx pretty-quick --staged",
    "pre-push": "npm run test:ci"
  },
  "engines": {
    "node": "16.X"
  }
}
