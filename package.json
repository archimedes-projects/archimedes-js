{
  "name": "archimedes",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "lerna run build --stream",
    "test": "jest --coverage",
    "test:ci": "jest --ci",
    "format": "prettier --write --ignore-path .gitignore .",
    "publish": "lerna publish from-git --yes",
    "bootstrap": "lerna bootstrap",
    "version": "lerna version --exact",
    "lerna": "lerna"
  },
  "devDependencies": {
    "@babel/core": "7.12.13",
    "@babel/preset-env": "7.12.13",
    "@babel/preset-typescript": "7.12.13",
    "@types/jest": "26.0.20",
    "babel-jest": "26.6.3",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "ts-jest": "26.5.1",
    "ts-mockito": "2.6.1",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,html,json,css,scss,md,yaml}": [
      "npm run format"
    ]
  }
}
