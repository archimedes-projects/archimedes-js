{
  "name": "archimedes",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "test": "jest --coverage",
    "test:ci": "jest --ci",
    "format": "prettier --write --ignore-path .gitignore .",
    "version": "lerna version --conventional-commits",
    "publish": "lerna publish --canary --yes --no-verify-access --message 'chore: release new versions'",
    "postinstall": "lerna bootstrap",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-typescript": "7.13.0",
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@types/jest": "26.0.20",
    "babel-jest": "26.6.3",
    "husky": "5.1.3",
    "isomorphic-fetch": "3.0.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "ts-jest": "26.5.3",
    "ts-mockito": "2.6.1",
    "typescript": "4.2.3"
  }
}
