  "devDependencies": {
    "@babel/core": "7.13.10",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-typescript": "7.13.0",
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@types/jest": "26.0.20",
    "babel-jest": "26.6.3",
    "husky": "5.1.3",
    "isomorphic-fetch": "3.0.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "ts-jest": "26.5.3",
    "ts-mockito": "2.6.1",
    "typescript": "4.2.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,html,json,css,scss,md,yaml}": [
