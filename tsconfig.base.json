{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@archimedes/*": ["./*/src"]
    }
  }
}
